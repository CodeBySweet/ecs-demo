{
    "containerDefinitions": [
      {
        "name": "my-app-container",
        "image": "REPLACE_ME",
        "cpu": 1024,
        "memory": 3072,
        "essential": true,
        "portMappings": [
          {
            "containerPort": 5000,
            "hostPort": 5000,
            "protocol": "tcp"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/my-app-task",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "healthCheck": {
          "command": ["CMD-SHELL", "curl -f --max-time 2 http://localhost:5000/health || exit 1"],
          "interval": 30,
          "retries": 5,
          "startPeriod": 120,
          "timeout": 5
        }
      }
    ],
    "family": "my-app-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "3072"
  }